"""Qt stylesheet for OpenManus GUI."""

QMainWindow {
    background-color: #2b2b2b;
}

QWidget {
    background-color: #2b2b2b;
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', sans-serif;
    font-size: 13px;
}

QTextEdit {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 8px;
}

QTextEdit:focus {
    border: 1px solid #007aff;
}

QPushButton {
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: 500;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #0051d5;
}

QPushButton:pressed {
    background-color: #003d9e;
}

QPushButton:disabled {
    background-color: #444;
    color: #888;
}

QPushButton#cancelButton {
    background-color: #444;
}

QPushButton#cancelButton:hover {
    background-color: #555;
}

QLabel {
    color: #ffffff;
}

QLabel#heading {
    font-size: 18px;
    font-weight: 600;
}

QLabel#subheading {
    font-size: 14px;
    font-weight: 500;
    color: #888;
}

QProgressBar {
    border: 1px solid #444;
    border-radius: 4px;
    background-color: #1e1e1e;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #30d158;
    border-radius: 3px;
}

QGroupBox {
    border: 1px solid #444;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 8px;
    font-weight: 500;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 8px;
    color: #888;
}

QTreeWidget {
    background-color: #1e1e1e;
    border: 1px solid #444;
    border-radius: 4px;
}

QTreeWidget::item {
    padding: 4px;
}

QTreeWidget::item:selected {
    background-color: #007aff;
}

QTreeWidget::item:hover {
    background-color: #333;
}

QTableWidget {
    background-color: #1e1e1e;
    border: 1px solid #444;
    border-radius: 4px;
    gridline-color: #444;
}

QTableWidget::item:selected {
    background-color: #007aff;
}

QHeaderView::section {
    background-color: #333;
    color: #ffffff;
    border: none;
    border-bottom: 1px solid #444;
    padding: 8px;
    font-weight: 500;
}

QScrollBar:vertical {
    background-color: #2b2b2b;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #555;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #666;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #2b2b2b;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #555;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #666;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Risk level colors */
.risk-LOW {
    color: #30d158;
}

.risk-MEDIUM {
    color: #ffd60a;
}

.risk-HIGH {
    color: #ff453a;
}

/* Status colors */
.status-success {
    color: #30d158;
}

.status-failure {
    color: #ff453a;
}

.status-pending {
    color: #888;
}

.status-running {
    color: #007aff;
}
